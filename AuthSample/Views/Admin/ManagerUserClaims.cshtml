@{
}
@model AuthSample.ViewModels.Admin.UserClaimsViewModel
<form method="post">
    <div>
        <h2>管理使用者聲明</h2>
    </div>
    <div>
        @for(int i = 0; i < Model.Claims.Count; i++)
        {
            <div>
                <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                <input asp-for="@Model.Claims[i].IsSelected" />
                <label asp-for="@Model.Claims[i].IsSelected">
                    @Model.Claims[i].ClaimType
                </label>
            </div>
        }
        <div>
            <button>更新</button>
            <a asp-action="EditUser" asp-route-id="@Model.UserId">取消</a>
        </div>
    </div>

</form>