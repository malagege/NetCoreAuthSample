@{
    var userId = ViewBag.userId;
}
@using AuthSample.ViewModels.Admin;

@model IList<RolesInUserViewModel>;

<h2>
    管理使用者的角色
</h2>
<form method="post">
<div>
   @*
    這邊不能用 foreach，會造成 html input name裡面命名不是陣列形式
   @foreach(var m in Model)*@
    @for(int i = 0; i < Model.Count; i++)
    {
        <div>
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].RoleName" />
            <input asp-for="@Model[i].IsSelected" />
            <label asp-for="@Model[i].IsSelected">
                @Model[i].RoleName
            </label>
        </div>
    }
</div>
<div>
    <button>更新</button>
    <a asp-action="EditUser" asp-route-id="@userId">取消</a>
</div>
</form>