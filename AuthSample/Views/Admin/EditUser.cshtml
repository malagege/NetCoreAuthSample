@{
}
@model EditUserViewModel;

<h1>編輯使用者</h1>
<form method="post">
    <div>
        <label asp-for="Id"></label>
        <input asp-for="Id" disabled />
    </div>
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
    </div>
    <div>
        <label asp-for="UserName"></label>
        <input asp-for="UserName" />
    </div>
    <div>
        <label asp-for="City"></label>
        <input asp-for="City" />
    </div>
    <div>
        <button>更新</button>
        <a asp-action="userlist">取消</a>
    </div>
    <div>
        <h3>使用者的角色</h3>
        <ul>
            @foreach (string roles in Model.Roles)
           {
            <li>@roles</li>
           }
        </ul>
        <div>
            <a asp-action="ManagerUserRoles" asp-route-userId="@Model.Id">管理角色</a>
        </div>
    </div>
    <div>
        <h3>管理聲明(Claims)</h3>
        <ul>
        @foreach (string claim in Model.Claims)
       {
           <li>@claim</li>
       }
       </ul>
       <div>
           <a asp-action="ManagerUserClaims" asp-route-userId="@Model.Id">管理聲明</a>
       </div>
    </div>

</form>